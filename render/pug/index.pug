doctype html
html(lang="en")
    head    
        meta(charset="utf-8")
        meta(content="width=device-width,initial-scale=1" name="viewport")
        title= "Joplin Theme Playground" 
        link(
            type="text/css" 
            rel="stylesheet" 
            href="css/fork-awesome.min.css"
            )
        link(
            type="text/css" 
            rel="stylesheet" 
            href="css/main.css"
            )
        link(
            media="(prefers-color-scheme: dark)" 
            type="text/css" 
            rel="stylesheet" 
            href="css/main-dark-mode.css"
            )
    body
        #panel-1
            #all-notes
                .header
                    i.fas.fa-clone
                    span All Notes
            #all-notebooks
                details(open)
                    summary
                        .header 
                            i.fas.fa-book
                            span Notebooks
                            button.secondary +
                    ul.list-item-depth-0
                        li.list-item-container 
                            details(open)
                                summary 
                                    span A Prender
                                        .count 8
                                ul.list-item-depth-1
                                    li.selected.list-item-container
                                        span Courses
                                            .count 12
                                    li.list-item-container
                                        span Divers
                                            .count 5
                                    li.list-item-container
                                        details(open)
                                            summary 
                                                span Enterprise
                                                    .count 23
                                            ul.list-item-depth-2
                                                li.list-item-container 
                                                    span Recipes
                                                        .count 3
                                                li.list-item-container 
                                                    span Bookmarks
                                                        .count 8
                                                li.list-item-container 
                                                    span Tickets
                                                        .count 12

            #all-tags
                details(open)
                    summary
                        .header 
                            i.fas.fa-tags
                            span Tags
                    ul
                        li.list-item-container 
                            span one
                                .count 1
                        li.list-item-container 
                            span two
                                .count 1
            #sync-status
                p Completed: 07/02/20 9:24 PM
                button synchronize
        #panel-2
            #add-new
                button.secondary + new todo
                button.primary + new note
            #search-notes
                input(type='text', placeholder='search')
            #current-notebook
                ul
                    li Note 1
                    li.selected Note 2
                    li
                        input(type="checkbox") 
                        |  Note 3
                    li
                        input(type="checkbox", checked) 
                        |  Note 3
        #panel-3
            #note-headline
                h1 Welcome to Joplin
            #note-metadata
                button info
            #note-timestamp 
                div 16/06/2020 
                div 10:21
            #note-navigation
                button <
                button >
            #note-tools
                button B
                button I
                button H
                button *
                button 1. 
                button [x]
                button %
                button= '</>'
                button @
                button +
            #note-view
                button layout
                button WYSIWYG
                button MD
                button ->
            #note-breadcrumb
                .row
                    div In
                    div 
                        a(href="#") A Prender
